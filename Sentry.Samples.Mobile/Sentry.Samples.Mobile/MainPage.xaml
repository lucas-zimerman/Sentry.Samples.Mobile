<ContentPage  xmlns="http://xamarin.com/schemas/2014/forms"
            xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
            x:Class="Sentry.Samples.Mobile.MainPage"
            Title="Sentry Samples Mobile">
    <StackLayout VerticalOptions="Center"
                 Margin="10,0,10,0">
        <Button Text="Send Message" Clicked="SendMessageEvent"/>
        <Button Text="Send Exception" Clicked="SendExceptionEvent"/>
        <Button Text="Try catch async" Clicked="TryCatchAsync"/>
        <Button Text="Crash me" Clicked="CrashEvent"/>
        <Button Text="Native Crash" Clicked="NatieCrash"/>
    </StackLayout>
</ContentPage>